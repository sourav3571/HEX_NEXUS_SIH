{
  "version": 2,
  "builds": [
    {
      "src": "server/src/main.py",  
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" } 
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/main.py" 
    },
    {
      "src": "/(.*)",
      "dest": "client/$1"
    }
  ]
}